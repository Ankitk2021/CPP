    ListNode* solve(ListNode* head){
    
     if(!head || !head->next) return head;
     ListNode* first = head;
     ListNode* sec = head->next;

     first->next = solve(sec->next);
     sec->next = first;
     return sec;

    }












    ListNode* solve(ListNode* head) {

        if (!head || !head->next)
            return head;

        ListNode* dummy = new ListNode(-1);
        ListNode* prev = dummy;
        ListNode* curr = head;
        ListNode* forw = head->next;

        while (curr && curr->next) {

            forw = curr->next;

            curr->next = forw->next;
            forw->next = curr;
            prev->next = forw;
            prev = curr;
            curr = curr->next;
        }

        return dummy->next;
    }
