stack<int> _push(int arr[], int n) {
    // code here
   
    stack<int> stk;
    
    for(int i = 0; i < n ; i++){
        
      if(i==0)
      stk.push(arr[i]);
      else
      stk.push(min(stk.top(),arr[i]));
       
    }
    
    return stk;
    
}

// Function to print minimum value in stack each time while popping.
void _getMinAtPop(stack<int> s) {
    
    // code here
   
    while(!s.empty()){
       
     cout << s.top() << " ";
     s.pop();
    }
}
