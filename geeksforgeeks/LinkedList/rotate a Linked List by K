    Node* getTail(Node* head){
        
        Node* temp = head;
        
        while(temp->next != NULL) temp = temp->next;
        
        return temp;
    }
    
    Node* rotate(Node* head, int k) {
        // code here
        if(!head || !head->next) return head;
        
        Node* tail = getTail(head);
        
        int n = k;
        
        Node* first = head;
        
        while(n>0){
            
            tail->next = first;
            
            Node* newNext = first->next;
            
            first->next = NULL;
            tail = tail->next;
            first = newNext;
            n--;
        }
        
        return first;
    }
